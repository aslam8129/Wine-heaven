<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wine Listing</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .overlay {
            background-color: rgba(0, 0, 0, 0.4);
        }
        .bg-wine {
            background-color: #600018;
        }
        .bg-wine:hover {
            background-color: #800020;
        }
        .wine-card {
            backdrop-filter: blur(5px);
            background-color: rgba(255, 255, 255, 0.95);
        }
        .featured-section {
            background: white;
        }
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }
        .dropdown-content button {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }
        .dropdown:hover .dropdown-content {
            display: block;
        }
        .bg-gold {
            background-color: #600018;
            color: white;
        }
        .bg-gold:hover {
            background-color: #800020;
            transform: translateY(-2px);
        }
        .bg-charcoal {
            background-color: white;
            color: white;
        }
        .wine-card {
            backdrop-filter: blur(5px);
            background-color: rgba(255, 255, 255, 0.95);
        }
        .featured-section {
            background: white;
        }
        .testimonial-card {
            background: white;
            backdrop-filter: blur(10px);
        }
        .bg-white {
            background: rgba(255, 255, 255, 0.95);
        }
        .scroll-indicator {
            animation: bounce 2s infinite;
        }
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-20px); }
            60% { transform: translateY(-10px); }
        }
    </style>
</head>
<body class="bg-white min-h-screen">
    <%- include('../partials/userHeader.ejs') %>
    <div class="max-w-7xl mx-auto px-4 -mt-15 relative z-10">
        <div class="bg-white rounded-lg shadow-xl p-4">
            <!-- Flexbox for search, sort, and category on the same line -->
            <div class="flex gap-4 items-center">
                <!-- Search Bar -->
                <div class="sm:w-1/3 w-full">
                    <form id="searchForm" action="/allproducts" method="get" class="flex items-center space-x-4">
                        <input type="text" name="search" id="searchInput" value="<%= query %>" class="p-2 border border-gray-300 rounded bg-white shadow-sm focus:ring focus:ring-indigo-200 w-full" placeholder="Search products...">
                        <button type="submit" class="p-2 bg-gold text-white rounded shadow-sm hover:bg-gold-dark transition-all duration-300">
                            Search
                        </button>
                    </form>
                </div>
            
                <!-- Sort Dropdown and Category Filter -->
                <div class="sm:w-2/3 w-full flex items-center gap-2">
                    <form id="filterForm" action="/allproducts" method="get" class="w-full flex items-center">
                        <!-- Category Dropdown -->
                        <select id="category" name="category" class="p-2 border border-gray-300 rounded w-full">
                            <option value="">Select a category</option>
                            <% categories.forEach(category => { %>
                                <option value="<%= category._id %>" <%= category._id === query.category ? 'selected' : '' %>>
                                    <%= category.name %>
                                </option>
                            <% }) %>
                        </select>
                        
                        <!-- Sort Dropdown -->
                        <select id="sortSelect" name="sort" class="p-2 border border-gray-300 rounded ml-2">
                            <option value="priceAsc" <%= sortOption === 'priceAsc' ? 'selected' : '' %>>Price: Low to High</option>
                            <option value="priceDesc" <%= sortOption === 'priceDesc' ? 'selected' : '' %>>Price: High to Low</option>
                            <option value="nameAsc" <%= sortOption === 'nameAsc' ? 'selected' : '' %>>Name: A to Z</option>
                            <option value="nameDesc" <%= sortOption === 'nameDesc' ? 'selected' : '' %>>Name: Z to A</option>
                        </select>
                        
                        <!-- Filter Button -->
                        <button type="submit" class="ml-2 p-2 bg-gold text-white rounded">Filter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Wine Listings -->
    <div class="max-w-7xl mx-auto px-4 py-8">
        <div id="productsGrid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% products.forEach(product => { %>
                <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105">
                    <div class="relative h-[300px]">
                        <img src="/uploads/<%= product.images[0] %>" alt="<%= product.name %>" class="h-full w-full object-cover" />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                        <div class="absolute bottom-0 left-0 right-0 p-6">
                            <h3 class="text-2xl font-bold text-white mb-2"><%= product.name %></h3>
                            <p class="text-xl text-bold text-white">$<%= product.price %></p>
                        </div>
                    </div>
                    <a href="/products/<%= product._id %>" class="block">
                        <button class="bg-gold w-full py-4 text-white font-semibold transition-all duration-300 hover:bg-opacity-90">
                            View Product
                        </button>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
        document.getElementById('sortSelect').addEventListener('change', function() {
            document.getElementById('sortForm').submit();  // Submit the form when the sort option changes
        });
    </script>

    <%- include('../partials/userFooter.ejs') %>
</body>
</html>
